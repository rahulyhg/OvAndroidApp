<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:id="@+id/page_two">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="160dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_label_expire_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expiration"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <movile.com.creditcardguide.view.maskedEditText.MaskedEditText
                    android:id="@+id/ed_expire_credit_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:digits="1234567890"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionNext"
                    android:tag="l"
                    android:text=""
                    android:singleLine="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="16sp"
                    android:textColor="@color/edittext_color"
                    android:hint="@string/hint_credit_expire_date"
                    mask:mask="##/##"/>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line_edittext_color" />

            </LinearLayout>
        </LinearLayout>

</LinearLayout>