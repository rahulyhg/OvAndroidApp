<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F7F9F9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_booking"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="center|top"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_noimage_placeholder" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_providerName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:tag="100"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:text="Title"
                        android:textColor="@color/colorAccent"
                        android:textSize="17sp" />

                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/tv_removeOrder"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="3dp"
                        android:layout_gravity="right"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/close_icon"/>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/none11"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:tag="300"
                        android:text="Order Date  : "
                        android:textColor="@color/md_grey_500"
                        android:textSize="12sp" />


                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_orderDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:tag="300"
                        android:text="Order Date"
                        android:textColor="@color/md_grey_500"
                        android:textSize="12sp" />



                </LinearLayout>





                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/md_grey_300" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/small_rounded_corner_borde">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal">

        <ovenues.com.ovenue.customviews.UserTextView
            android:id="@+id/xx"
            android:layout_gravity="left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:tag="100"
            android:gravity="left|center"
            android:text="Event"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <ovenues.com.ovenue.customviews.UserTextView
            android:id="@+id/tv_bookingnumber"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right|center"
            android:tag="100"
            android:text="Booking ID : "
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        </LinearLayout>

        <ovenues.com.ovenue.customviews.UserTextView
            android:visibility="gone"
            android:id="@+id/tv_providerName_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:tag="100"
            android:text="Title booking"
            android:textColor="@color/white"
            android:textSize="25sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="vertical">



                        <ovenues.com.ovenue.customviews.UserTextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:tag="100"
                            android:text="Booking Details"
                            android:visibility="gone"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:textSize="21sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_bookingDetails_orderDate"
                        android:layout_gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:tag="100"
                        android:drawableStart="@drawable/ic_calander_grey"
                        android:drawablePadding="10dp"
                        android:gravity="left|center"
                        android:text="event date"
                        android:textColor="@color/md_grey_600"
                        android:textSize="12sp" />

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/none2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:tag="300"
                        android:visibility="gone"
                        android:text="Event Date"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="3dp"
                    android:orientation="horizontal">

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_bookingDetails_eventDate"
                        android:layout_gravity="left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:tag="100"
                        android:drawableStart="@drawable/ic_clock_grey"
                        android:drawablePadding="10dp"
                        android:gravity="left|center"
                        android:text="Address Line 1"
                        android:textColor="@color/md_grey_600"
                        android:textSize="12sp" />


                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/none1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:tag="300"
                        android:visibility="gone"
                        android:text="Order Date"
                        android:textColor="@color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/guestNumber"
                    android:layout_marginTop="5dp"
                    android:padding="3dp"
                    android:layout_gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:tag="100"
                    android:drawableStart="@drawable/ic_guest_grey"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:text="Address Line 1"
                    android:textColor="@color/md_grey_600"
                    android:textSize="12sp" />





                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_bookingnumber2"
                            android:visibility="gone"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:padding="3dp"
                            android:gravity="left|center"
                            android:tag="100"
                            android:text="Booking ID "
                            android:textColor="@color/md_grey_700"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            android:background="@color/md_grey_300" />



