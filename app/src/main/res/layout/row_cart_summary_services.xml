<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_title"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:tag="100"
                            android:text="Title"
                            android:gravity="left|center"
                            android:textColor="@color/colorAccent"
                            android:textSize="17sp" />

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="1.2"
                            android:gravity="right|center"
                            android:tag="100"
                            android:text="Price"
                            android:textColor="@color/md_grey_600"
                            android:textSize="15sp" />


                    </LinearLayout>


                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:tag="100"
                        android:text="Title"
                        android:textColor="@color/md_grey_700"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            android:background="@color/md_grey_300" />

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_time"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="left|center"
                            android:drawableLeft="@drawable/ic_calander_grey"
                            android:drawablePadding="5dp"
                            android:tag="100"
                            android:text="Time "
                            android:textColor="@color/md_grey_700"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            android:background="@color/md_grey_300" />

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_guestcount"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:gravity="left|center"
                            android:tag="100"
                            android:text="Guest Count "
                            android:textColor="@color/md_grey_700"
                            android:drawableLeft="@drawable/ic_guest_grey"
                            android:drawablePadding="5dp"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            android:background="@color/md_grey_300" />

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_address"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:gravity="left|center"
                            android:tag="100"
                            android:text="address"
                            android:drawableLeft="@drawable/ic_map_grey_small"
                            android:drawablePadding="5dp"
                            android:textColor="@color/md_grey_700"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:drawablePadding="5dp"
                        android:layout_margin="3dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_extracharge"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:tag="300"
                            android:text=""
                            android:textColor="@color/md_grey_700"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/md_grey_300" />





                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/md_grey_300" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:maxLines="3"
                        android:tag="100"
                        android:text="Note "
                        android:textColor="@color/md_grey_500"
                        android:textSize="14sp" />

                    <!--  <ovenues.com.ovenue.customviews.UserTextView
                          android:id="@+id/tv_remove"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="5dp"
                          android:gravity="right|top"
                          android:maxLines="3"
                          android:paddingLeft="10dp"
                          android:tag="300"
                          android:text="Remove"
                          android:textColor="@color/md_red_700"
                          android:textSize="14sp" />-->
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_itemcount"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right|center"
                android:orientation="horizontal">

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_details"
                    android:tag="300"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:foregroundTint="@color/white"
                    android:backgroundTint="@color/md_grey_50"
                    android:text="Detail"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:elevation="5dp"
                    android:textColor="@color/md_blue_700"
                    android:textSize="15sp" />


                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/btn_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:backgroundTint="@color/md_grey_50"
                    android:elevation="5dp"
                    android:foregroundTint="@color/white"
                    android:gravity="right"
                    android:tag="300"
                    android:text="Remove"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />


            </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/md_grey_300" />

</LinearLayout>
