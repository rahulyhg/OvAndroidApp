                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:drawableLeft="@drawable/ic_calander_grey"
                            android:drawablePadding="7dp"
                            android:gravity="left"
                            android:paddingLeft="3dp"
                            android:tag="100"
                            android:text="Date"
                            android:textColor="@color/md_grey_600"
                            android:textSize="15sp" />


                        <ovenues.com.ovenue.customviews.UserEditText
                            android:id="@+id/et_date"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_margin="2dp"
                            android:background="@drawable/small_rounded_corner_borde"
                            android:drawablePadding="10dp"
                            android:focusable="false"
                            android:focusableInTouchMode="true"
                            android:gravity="left|center"
                            android:hint="Date"
                            android:inputType="date"
                            android:padding="5dp"
                            android:tag="100"
                            android:textColor="@color/black"
                            android:textColorHint="@color/md_grey_400"
                            android:textSize="12sp"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:drawableLeft="@drawable/ic_clock_grey"
                            android:drawablePadding="7dp"
                            android:gravity="left"
                            android:paddingLeft="3dp"
                            android:tag="100"
                            android:text="Time"
                            android:textColor="@color/md_grey_600"
                            android:textSize="15sp" />


                        <ovenues.com.ovenue.customviews.UserEditText
                            android:id="@+id/et_delivery_time"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_margin="2dp"
                            android:background="@drawable/small_rounded_corner_borde"
                            android:drawablePadding="10dp"
                            android:focusable="false"
                            android:focusableInTouchMode="true"
                            android:gravity="left|center"
                            android:hint="Time"
                            android:inputType="date"
                            android:padding="5dp"
                            android:tag="100"
                            android:textColor="@color/black"
                            android:textColorHint="@color/md_grey_400"
                            android:textSize="12sp"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:drawableLeft="@drawable/ic_guest_grey"
                            android:drawablePadding="7dp"
                            android:gravity="left"
                            android:paddingLeft="3dp"
                            android:tag="100"
                            android:text="Guests"
                            android:textColor="@color/md_grey_600"
                            android:textSize="15sp" />


                        <ovenues.com.ovenue.customviews.UserEditText
                            android:id="@+id/et_guestCount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:layout_margin="2dp"
                            android:background="@drawable/small_rounded_corner_borde"
                            android:drawablePadding="10dp"
                            android:focusableInTouchMode="true"
                            android:gravity="left|center"
                            android:hint="Guest"
                            android:imeOptions="actionGo"
                            android:inputType="number"
                            android:padding="5dp"
                            android:tag="100"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout" />


                    </LinearLayout>

                </LinearLayout>

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_error_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="left|center"
                    android:paddingStart="7dp"
                    android:tag="100"
                    android:text="Date "
                    android:textColor="@color/md_red_900"
                    android:textSize="12sp" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:buttonTint="#717071"
                        android:text="Delivery"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                    <RadioButton
                        android:id="@+id/rb_pickup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:buttonTint="#717071"
                        android:text="Pickup"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <RadioButton
                        android:id="@+id/rb_onsite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:buttonTint="#717071"
                        android:text="On Site Service"
                        android:textColor="@color/black"
                        android:textSize="15sp" />


                </RadioGroup>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_address"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

                    <AutoCompleteTextView
                        android:id="@+id/et_address_line"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/small_rounded_corner_borde"
                        android:focusableInTouchMode="true"
                        android:gravity="left|center"
                        android:hint="Address"
                        android:inputType="textPostalAddress"
                        android:maxLength="200"
                        android:padding="5dp"
                        android:tag="100"
                        android:textColor="#767878"
                        android:textSize="14sp" />

                </android.support.design.widget.TextInputLayout>

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_delivery_freecharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:tag="300"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="10sp" />

            </LinearLayout>

            <ovenues.com.ovenue.customviews.UserTextView
                android:id="@+id/tv_submitdynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:layout_gravity="left"
                android:padding="5dp"
                android:tag="300"
                android:text=""
                android:textColor="@color/white"
                android:textSize="17sp"
                android:background="@drawable/rounded_corner_orange_white_borde"/>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_charges"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                android:layout_marginTop="10dp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</FrameLayout>
