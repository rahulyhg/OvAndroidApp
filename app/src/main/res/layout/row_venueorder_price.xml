<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="10dp">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:gravity="top|center"
        android:layout_weight="1"
        android:orientation="vertical">

        <ovenues.com.ovenue.customviews.UserTextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="100"
        android:text="Title"
        android:textColor="@color/colorAccent"
        android:textSize="19sp" />


        <ovenues.com.ovenue.customviews.UserTextView
            android:id="@+id/tv_details"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:gravity="left|center"
            android:tag="300"
            android:text=""
            android:textColor="#767777"
            android:textSize="12sp" />

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_weekdays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:drawableLeft="@drawable/ic_calander_grey"
                    android:drawablePadding="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center"
                    android:tag="300"
                    android:text=""
                    android:textColor="#767777"
                    android:textSize="12sp" />

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_weektimes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:drawableLeft="@drawable/ic_clock_grey"
                    android:drawablePadding="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center"
                    android:tag="300"
                    android:text=""
                    android:textColor="#767777"
                    android:textSize="12sp" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ovenues.com.ovenue.customviews.UserTextView
            android:id="@+id/tv_duration"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:tag="300"
            android:drawableLeft="@drawable/ic_clock_orange"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:text="Duration"
            android:textColor="#767777"
            android:textSize="15sp" />

        <ovenues.com.ovenue.customviews.UserTextView
            android:id="@+id/tv_guestCount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:tag="300"
            android:drawableLeft="@drawable/ic_guest_orange"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:text="Guest"
            android:textColor="#767777"
            android:textSize="15sp" />


        </LinearLayout>



        </LinearLayout>


        <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.39"
        android:layout_height="match_parent">

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:tag="300"
                    android:text="$ "
                    android:textColor="@color/colorAccent"
                    android:textSize="19sp" />

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_pkg_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="left|center"
                    android:tag="300"
                    android:text=""
                    android:textColor="#767777"
                    android:textSize="10sp"/>

                <LinearLayout
                    android:id="@+id/ll_extra_charge"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:layout_width="0dp"
                            android:layout_weight="1.19"
                            android:layout_height="wrap_content"
                            android:tag="300"
                            android:layout_gravity="top"
                            android:gravity="top|left"
                            android:text="Extra : "
                            android:textColor="#767777"
                            android:textSize="10sp" />

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_extra_charge"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:tag="300"
                            android:text=""
                            android:textColor="#767777"
                            android:textSize="10sp"/>


                </LinearLayout>


        </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

                <LinearLayout
                    android:id="@+id/ll_extra"
                    android:layout_width="0dp"
                    android:layout_weight="2.5"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:gravity="center"
                            android:id="@+id/tv_duration_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:tag="300"
                            android:text="Extra : "
                            android:textColor="@color/colorAccent"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/img_clock"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_clock_grey"/>


                        <Spinner
                        android:id="@+id/sp_hh"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/small_rounded_corner_borde"
                        android:padding="3dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="2dp"/>

                        <Spinner
                        android:id="@+id/sp_mm"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/small_rounded_corner_borde"
                        android:padding="3dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginStart="2dp"
                        android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/img_guest"
                            android:visibility="gone"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="2dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/ic_guest_grey"/>

                        <Spinner
                            android:id="@+id/sp_qty"
                            android:visibility="gone"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:spinnerMode="dropdown"
                            android:background="@drawable/small_rounded_corner_borde"
                            android:padding="3dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginStart="2dp"
                            android:layout_height="wrap_content" />

                        <android.support.v4.widget.Space
                        android:layout_width="0dp"
                        android:layout_weight="0.01"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_addtocart"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/rounded_corner_orange_white_borde"
                    android:drawableLeft="@drawable/ic_white_cart_small"
                    android:drawablePadding="-5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:tag="300"
                    android:text="SELECT"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                <android.support.v7.widget.AppCompatCheckBox
                    android:visibility="gone"
                    android:id="@+id/cb_selectedprice"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <ImageView
                    android:id="@+id/img_remove"
                    android:visibility="gone"
                    android:layout_marginStart="5dp"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/small_rounded_corner_borde"
                    app:srcCompat="@drawable/ic_close_gray_24dp"/>
        </LinearLayout>


            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_300" />


</LinearLayout>