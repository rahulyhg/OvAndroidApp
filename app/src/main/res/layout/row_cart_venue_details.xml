<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

            <LinearLayout
                android:id="@+id/ll_main_row_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left|center"
                        android:tag="100"
                        android:text="Title"
                        android:textColor="@color/md_grey_600"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/ll_numpiker_itemcount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginTop="5dp"
                        android:gravity="left|center"
                        android:orientation="horizontal">


                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_ext_person"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|right"
                            android:gravity="center"
                            android:tag="300"
                            android:text="Qty :"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp"
                            android:visibility="gone" />

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_price_copy"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:tag="100"
                            android:text=""
                            android:textColor="@color/md_grey_600"
                            android:textSize="15sp" />

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:gravity="right|center"
                            android:maxLines="1"
                            android:tag="100"
                            android:text=" X "
                            android:textColor="@color/md_grey_600"
                            android:textSize="15sp" />


                        <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
                            android:id="@+id/np_itemcount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left"
                            android:gravity="left"
                            app:snp_buttonBackgroundTintSelector="@color/btn_tint_selector_main"
                            app:snp_buttonIconLeft="@drawable/ic_remove_circle_outline_black_24dp"
                            app:snp_buttonIconRight="@drawable/ic_add_circle_outline_black_24dp"
                            app:snp_minValue="0"
                            app:snp_orientation="horizontal"
                            app:snp_scrollEnabled="true"
                            app:snp_stepSize="1"
                            app:snp_updateInterval="1"
                            app:snp_value="0"
                            app:snp_valueMarginEnd="10dp"
                            app:snp_valueMarginStart="10dp"
                            app:snp_value_text_color="@color/white"
                            app:snp_value_text_size="25sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_itemcount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:gravity="left"
                        android:layout_marginTop="3dp"
                        android:orientation="vertical">

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_date_time"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:drawablePadding="10dp"
                            android:tag="100"
                            android:text=""
                            android:textColor="@color/md_grey_600"
                            android:textSize="15sp" />

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_address"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:drawablePadding="10dp"
                            android:tag="100"
                            android:text=""
                            android:textColor="@color/md_grey_600"
                            android:textSize="15sp" />

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_guest"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:gravity="left"
                            android:tag="100"
                            android:text=""
                            android:drawablePadding="10dp"
                            android:textColor="@color/md_grey_600"
                            android:textSize="15sp" />



                    </LinearLayout>

                </LinearLayout>


                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/md_grey_300" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_price_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:gravity="right|center"
                        android:tag="100"
                        android:text=""
                        android:textColor="@color/md_grey_600"
                        android:textSize="15sp" />

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/btn_remove"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/md_grey_50"
                        android:elevation="5dp"
                        android:foregroundTint="@color/white"
                        android:gravity="right|center"
                        android:tag="100"
                        android:text="Remove"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                </LinearLayout>




            </LinearLayout>

            <TableLayout
                android:id="@+id/tl_catering_item_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:gravity="left|center"
                android:layout_margin="1dp"/>

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/md_grey_300" />

 </LinearLayout>