<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_relative_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/md_blue_grey_50">


        <ovenues.com.ovenue.customviews.UserTextView
            android:visibility="gone"
            android:id="@+id/tv_menutitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="3dp"
            android:tag="300"
            android:text="Food Packages"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_margin="1dp"
            android:background="@color/white">

            <ovenues.com.ovenue.customviews.UserTextView
                android:id="@+id/tv_perplate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:gravity="right|bottom"
                android:tag="300"
                android:text="*per plate"
                android:textColor="@color/md_grey_700"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_srNo"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_gravity="top|center"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/rounded_corner_orange_white_borde"
                    android:gravity="top|center"
                    android:padding="5dp"
                    android:tag="300"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_weight="3"
                    android:gravity="top|center"
                    android:orientation="vertical">

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:tag="100"
                        android:text="Title"
                        android:textColor="@color/colorAccent"
                        android:textSize="15sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@color/md_grey_300" />

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_course_totalcount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="1dp"
                        android:gravity="left|center"
                        android:tag="300"
                        android:text="courses"
                        android:textColor="@color/md_grey_700"
                        android:textSize="12sp" />


                </LinearLayout>

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:maxLines="1"
                    android:tag="300"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_ext_person"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:tag="300"
                    android:text="Qty :"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
                    android:id="@+id/np_itemcount"
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:snp_buttonBackgroundTintSelector="@color/btn_tint_selector_main"
                    app:snp_buttonIconLeft="@drawable/ic_remove_circle_outline_black_24dp"
                    app:snp_buttonIconRight="@drawable/ic_add_circle_outline_black_24dp"
                    app:snp_minValue="0"
                    app:snp_orientation="horizontal"
                    app:snp_scrollEnabled="true"
                    app:snp_stepSize="1"
                    app:snp_updateInterval="1"
                    app:snp_value="0"
                    app:snp_valueMarginEnd="15dp"
                    app:snp_valueMarginStart="15dp"
                    app:snp_value_text_color="@color/white"
                    app:snp_value_text_size="17sp" />

                <ovenues.com.ovenue.customviews.UserTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="right|center"
                    android:maxLines="1"
                    android:tag="300"
                    android:text=" X "
                    android:visibility="gone"
                    android:textColor="@color/md_grey_600"
                    android:textSize="15sp" />

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_price_copy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center"
                    android:gravity="right|center"
                    android:maxLines="1"
                    android:tag="300"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="@color/colorAccent"
                    android:textSize="30sp" />

                <android.support.v4.widget.Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_addGuestCount"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_white_cart_small"
                    android:drawablePadding="1dp"
                    android:maxLines="1"
                    android:tag="300"
                    android:background="@drawable/rounded_corner_orange_white_borde"
                    android:text="  Add  "
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:orientation="horizontal">

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_price_total"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:maxLines="1"
                    android:tag="300"
                    android:text=""
                    android:textColor="@color/md_grey_700"
                    android:textSize="21sp" />


            </LinearLayout>


        </LinearLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/activity_main_swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp">
            <!-- Framelayout to display Fragments -->
            <FrameLayout
                android:id="@+id/frame_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_venuelist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp" />

                <include
                    android:id="@+id/footerView"
                    layout="@layout/footer_right_floating_filter"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal|bottom"
                    android:visibility="gone" />
            </FrameLayout>

        </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>