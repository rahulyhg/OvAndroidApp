<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#2d2b38">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:padding="55dp"
        app:srcCompat="@drawable/logo_dark"
        android:scaleType="centerInside"
        android:background="@color/white"
        android:layout_height="200dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">


    <ovenues.com.ovenue.customviews.UserTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="100"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:textColor="@color/white"
        android:text="LOGIN"/>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal"
            android:id="@+id/radioGroup">

            <RadioButton

                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="HOST"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="VENDOR"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="SERVICE PROVIDER"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp" />
        </RadioGroup>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">


        <ovenues.com.ovenue.customviews.UserEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textWebEmailAddress"
                android:ems="10"
                android:tag="100"
                android:gravity="left"
                android:textSize="21sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_bordewhite"
                android:padding="10dp"
                android:hint="E-mail"
                android:textColor="@color/white"
                android:id="@+id/et_email" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/white"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">>

            <ovenues.com.ovenue.customviews.UserEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textWebPassword"
                android:ems="10"
                android:tag="100"
                android:gravity="left"
                android:textSize="21sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_corner_bordewhite"
                android:padding="10dp"
                android:hint="Password"
                android:textColor="@color/white"
                android:id="@+id/et_password" />

        </android.support.design.widget.TextInputLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ovenues.com.ovenue.customviews.UserTextView
                android:id="@+id/tv_signin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:tag="200"
                android:text="Login"
                android:textAllCaps="true"
                android:textSize="17sp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="@color/white"
                android:background="#f0944e"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center">

            <ovenues.com.ovenue.customviews.UserTextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:tag="100"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:text="FORGET PASSWORD ?"/>



            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="match_parent" />

            <ovenues.com.ovenue.customviews.UserTextView
                android:id="@+id/tv_signup"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:tag="100"
                android:layout_gravity="right"
                android:gravity="right"
                android:textColor="#f0944e"
                android:textSize="15sp"
                android:text="SIGN UP"/>

        </LinearLayout>

        <ovenues.com.ovenue.customviews.UserTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="100"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:textColor="@color/white"
            android:text="OR"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <ovenues.com.ovenue.customviews.UserTextView
                android:id="@+id/tv_guestLogin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:tag="200"
                android:text="Login  as  guest"
                android:textAllCaps="true"
                android:textSize="17sp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textColor="@color/colorAccent"
                android:background="@drawable/rounded_corner_white"
                android:gravity="center"/>

        </LinearLayout>




    </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
