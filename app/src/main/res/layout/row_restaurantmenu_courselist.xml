<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

    <ovenues.com.ovenue.customviews.UserTextView
     android:tag="300"
     android:id="@+id/tv_srNo"
     android:background="@drawable/rounded_corner_orange_white_borde"
     android:layout_width="0dp"
     android:layout_height="35dp"
     android:layout_gravity="top|center"
     android:gravity="top|center"
     android:padding="5dp"
     android:visibility="gone"
     android:layout_marginLeft="1dp"
     android:textColor="@color/white"
     android:textSize="15sp"
     android:layout_weight="0.2" />

    <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center"
    android:gravity="top|center"
    android:layout_weight="1"
    android:orientation="vertical">

    <ovenues.com.ovenue.customviews.UserTextView
    android:id="@+id/tv_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:tag="100"
    android:text="Title"
    android:textColor="@color/colorAccent"
    android:textSize="15sp" />

    <View
        android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@color/md_grey_300" />

    <ovenues.com.ovenue.customviews.UserTextView
    android:id="@+id/tv_course_totalcount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="1dp"
    android:gravity="left|center"
    android:tag="300"
    android:text="courses"
    android:textColor="@color/md_grey_700"
    android:textSize="12sp" />



    </LinearLayout>

    <ovenues.com.ovenue.customviews.UserTextView
     android:id="@+id/tv_price"
     android:layout_width="0dp"
     android:layout_height="35dp"
     android:layout_gravity="top|center"
     android:layout_weight="0.2"
     android:gravity="top|center"
     android:maxLength="5"
     android:maxLines="1"
     android:tag="300"
     android:text="price"
     android:textColor="@color/md_grey_700"
     android:textSize="19sp" />

    </LinearLayout>

    <ovenues.com.ovenue.customviews.UserTextView
    android:id="@+id/tv_perplate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="1dp"
    android:gravity="right|center"
    android:tag="300"
    android:text="*per plate"
    android:textColor="@color/md_grey_700"
    android:textSize="12sp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/md_blue_grey_600"/>

</LinearLayout>