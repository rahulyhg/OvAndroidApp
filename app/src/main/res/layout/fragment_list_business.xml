<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F9F9">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/gray_hint"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <ovenues.com.ovenue.customviews.UserEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:inputType="text"
                android:ems="10"
                android:tag="100"
                android:gravity="left|center"
                android:layout_gravity="left|center"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/small_rounded_corner_borde"
                android:focusable="true"
                android:maxLength="50"
                android:lines="1"
                android:hint="Name of Business"
                android:textColor="@color/black"
                android:id="@+id/et_businessName" />

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatSpinner
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/small_rounded_corner_borde"
            android:id="@+id/sp_businesstype"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="10dp"
            android:textColorHint="@color/gray_hint"
            android:layout_marginRight="10dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/gray_hint"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <AutoCompleteTextView
                android:textColorHint="@color/gray_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:padding="7dp"
                android:inputType="text"
                android:ems="10"
                android:tag="100"
                android:gravity="left|center"
                android:layout_gravity="left|center"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/small_rounded_corner_borde"
                android:focusable="true"
                android:maxLength="50"
                android:lines="1"
                android:hint="Street Address"
                android:id="@+id/et_address" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/gray_hint"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <ovenues.com.ovenue.customviews.UserEditText
                android:textColorHint="@color/gray_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/black"
                android:inputType="phone"
                android:ems="10"
                android:tag="100"
                android:gravity="left|center"
                android:layout_gravity="left|center"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/small_rounded_corner_borde"
                android:focusable="true"
                android:maxLength="12"
                android:lines="1"
                android:hint="Phone Number"
                android:id="@+id/et_phoneNumber" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/gray_hint"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <ovenues.com.ovenue.customviews.UserEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/black"
                android:inputType="textWebEmailAddress"
                android:ems="10"
                android:tag="100"
                android:gravity="left|center"
                android:layout_gravity="left|center"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/small_rounded_corner_borde"
                android:focusable="true"
                android:maxLength="50"
                android:lines="1"
                android:hint="E-Mail"
                android:id="@+id/et_email" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/gray_hint"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <ovenues.com.ovenue.customviews.UserEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:textColor="@color/black"
                android:inputType="text"
                android:ems="10"
                android:tag="100"
                android:gravity="left|center"
                android:layout_gravity="left|center"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/small_rounded_corner_borde"
                android:focusable="true"
                android:maxLength="50"
                android:lines="1"
                android:hint="Contact Manager"
                android:id="@+id/et_contactManager" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/gray_hint"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <ovenues.com.ovenue.customviews.UserEditText
                android:id="@+id/et_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/small_rounded_corner_borde"
                android:ems="10"
                android:focusable="true"
                android:gravity="left|center"
                android:hint="Web Site"
                android:inputType="textWebEditText"
                android:lines="1"
                android:maxLength="50"
                android:padding="7dp"
                android:tag="100"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:textColorHint="@color/gray_hint"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

            <ovenues.com.ovenue.customviews.UserEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:inputType="textMultiLine"
                android:maxLines="3"
                android:lines="3"
                android:ems="10"
                android:tag="100"
                android:gravity="left|top"
                android:layout_gravity="left|center"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/small_rounded_corner_borde"
                android:focusable="true"
                android:textColor="@color/black"
                android:maxLength="50"
                android:hint="Description"
                android:id="@+id/et_description" />

        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/cb_terms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_600"
            android:layout_marginTop="10dp"
            android:background="#90000000"
            android:padding="10dp"
            android:checked="false"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="17sp"
            android:buttonTint="@color/black"
            android:backgroundTint="@color/transparent"
            android:text="Accept Terms &amp; Conditions"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center">


            <ovenues.com.ovenue.customviews.UserTextView
                android:id="@+id/tv_submit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner_orange_white_borde"
                android:gravity="center"
                android:padding="5dp"
                android:tag="100"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
