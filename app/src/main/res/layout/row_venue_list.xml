<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:padding="5dp"
    android:elevation="3dp"
    android:clickable="true"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_venue"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:transitionName="transitionImg"
                app:srcCompat="@drawable/ic_noimage_placeholder" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal">

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_title"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center|left"
                    android:maxLines="1"
                    android:tag="200"
                    android:text="Title"
                    android:textColor="@color/md_grey_600"
                    android:textSize="15sp" />

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_pricerange"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="0.3"
                        android:gravity="right|center"
                        android:maxLines="2"
                        android:tag="200"
                        android:text="$$$$"
                        android:textColor="@color/md_grey_700"
                        android:textSize="14dp" />


            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="11dp"
                    android:background="@color/white"
                    android:orientation="horizontal">


                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_addressline1"
                            android:layout_width="0dp"
                            android:layout_weight="0.50"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:layout_gravity="left|center"
                            android:gravity="left|center"
                            android:drawableStart="@drawable/ic_map_grey_verysmall"
                            android:maxLines="2"
                            android:tag="100"
                            android:text="Address Line 1"
                            android:textColor="#777878"
                            android:textSize="12sp" />


                    <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_addressline2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:tag="100"
                            android:text="Address Line 1"
                            android:textColor="#777878"
                            android:textSize="10sp"
                            android:visibility="gone" />

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_capacity"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_icon_two_people"
                        android:drawablePadding="5dp"
                        android:gravity="left"
                        android:padding="2dp"
                        android:tag="100"
                        android:text=""
                        android:textColor="#777878"
                        android:textSize="12sp" />


                </LinearLayout>


        </LinearLayout>


            <ImageView
                android:id="@+id/img_feature"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                app:srcCompat="@drawable/ic_flag_featured" />




            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fb_favourite"
                android:visibility="gone"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="55dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/white"
                android:baselineAlignBottom="true"
                android:elevation="3dp"
                app:borderWidth="0dp"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_heart" />


        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_Yelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="1dp"
            android:background="@color/white"
            android:orientation="horizontal">



            <ImageView
                android:id="@+id/img_rating"
                android:layout_marginEnd="2dp"
                android:layout_width="wrap_content"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_marginBottom="1dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher" />

            <ovenues.com.ovenue.customviews.UserTextView
                android:id="@+id/tv_yelpcount"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="left|center"
                android:maxLines="2"
                android:tag="100"
                android:text=""
                android:textColor="@color/md_grey_700"
                android:textSize="10dp" />


            <ImageView
                android:id="@+id/img_yelp"
                android:layout_marginEnd="2dp"
                android:layout_width="15dp"
                android:scaleType="fitXY"
                android:layout_height="15dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_social_yelp" />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="1dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:gravity="top|left"
            android:orientation="horizontal">

            <ovenues.com.ovenue.customviews.UserTextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:tag="100"
                android:text=""
                android:textColor="@color/colorAccent"
                android:textSize="19sp" />

            <ovenues.com.ovenue.customviews.UserTextView
                android:id="@+id/tvdemo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:padding="2dp"
                android:tag="100"
                android:text=""
                android:textColor="#777878"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:scrollbars="none" />



        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>