<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:padding="5dp"
    android:elevation="3dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_booking"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_gravity="center|top"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_noimage_placeholder" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:tag="100"
                        android:layout_gravity="top"
                        android:gravity="top"
                        android:text="Title"
                        android:textColor="#6B6868"
                        android:textSize="17sp" />

                    <ImageView
                        android:id="@+id/tv_removeOrder"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="3dp"
                        android:layout_gravity="right"
                        android:tint="@color/colorAccent"
                        android:src="@drawable/close_icon"/>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/none1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:tag="300"
                        android:text="Order Date"
                        android:textColor="@color/md_grey_500"
                        android:textSize="12sp" />


                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_orderDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:gravity="left|center"
                        android:tag="300"
                        android:text="Order Date"
                        android:textColor="@color/md_grey_500"
                        android:textSize="12sp" />



                </LinearLayout>

                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/none2"
                    android:padding="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:tag="300"
                    android:text="Event"
                    android:textColor="#6B6868"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp">

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_eventDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="1.4"
                        android:gravity="left|center"
                        android:drawablePadding="3dp"
                        android:tag="300"
                        android:text="31/31/2017"
                        android:drawableLeft="@drawable/ic_calander_grey"
                        android:textColor="@color/md_grey_500"
                        android:textSize="12sp" />

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_eventTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_weight="2"
                        android:gravity="left|center"
                        android:drawablePadding="3dp"
                        android:tag="300"
                        android:text="00:00 a.m \n00:00 p.m"
                        android:drawableLeft="@drawable/ic_clock_grey"
                        android:textColor="@color/md_grey_500"
                        android:textSize="12sp" />


                </LinearLayout>




                <ovenues.com.ovenue.customviews.UserTextView
                    android:id="@+id/tv_bookingID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:gravity="left|center"
                    android:tag="300"
                    android:text="Booking ID : "
                    android:padding="2dp"
                    android:textColor="@color/md_grey_700"
                    android:textSize="12sp" />


                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@color/md_grey_300" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:padding="3dp">

            <ovenues.com.ovenue.customviews.UserTextView
                android:id="@+id/tv_orderStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_weight="1"
                android:gravity="right|center"
                android:paddingEnd="10dp"
                android:tag="300"
                android:text="pending"
                android:textAllCaps="false"
                android:textColor="@color/md_yellow_900"
                android:textSize="12sp" />



        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>