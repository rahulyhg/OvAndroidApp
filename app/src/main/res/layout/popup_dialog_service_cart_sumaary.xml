<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">


        <ovenues.com.ovenue.customviews.UserTextView
            android:id="@+id/tv_providerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:tag="300"
            android:text="Provider Name "
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <android.support.v7.widget.CardView
            app:cardCornerRadius="5dp"
            android:padding="5dp"
            android:elevation="3dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardPreventCornerOverlap="false"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ovenues.com.ovenue.customviews.UserTextView
                                android:id="@+id/tv_title"
                                android:layout_margin="3dp"
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="wrap_content"
                                android:tag="100"
                                android:text="Title"
                                android:gravity="left"
                                android:textColor="@color/colorAccent"
                                android:textSize="21sp" />

                            <ovenues.com.ovenue.customviews.UserTextView
                                android:id="@+id/tv_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:tag="100"
                                android:text="Price"
                                android:textColor="@color/colorAccent"
                                android:textSize="15sp" />



                        </LinearLayout>




                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            android:background="@color/md_grey_300" />

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_time"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:gravity="left|center"
                            android:drawableLeft="@drawable/ic_clock_grey"
                            android:drawablePadding="5dp"
                            android:layout_margin="3dp"
                            android:tag="100"
                            android:text="Time "
                            android:textColor="@color/md_grey_700"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            android:background="@color/md_grey_300" />

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_guestcount"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:gravity="left|center"
                            android:tag="100"
                            android:text="Guest Count "
                            android:textColor="@color/md_grey_700"
                            android:drawableLeft="@drawable/ic_guest_grey"
                            android:drawablePadding="5dp"
                            android:layout_margin="3dp"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:visibility="gone"
                            android:background="@color/md_grey_300" />

                        <ovenues.com.ovenue.customviews.UserTextView
                            android:id="@+id/tv_address"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:gravity="left|center"
                            android:tag="100"
                            android:text="address"
                            android:drawableLeft="@drawable/ic_map_grey_small"
                            android:drawablePadding="5dp"
                            android:layout_margin="3dp"
                            android:textColor="@color/md_grey_700"
                            android:textSize="15sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:drawablePadding="5dp"
                            android:layout_margin="3dp"
                            android:orientation="horizontal">

                            <ovenues.com.ovenue.customviews.UserTextView
                                android:id="@+id/tv_extracharge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:tag="300"
                                android:text=""
                                android:textColor="@color/md_grey_700"
                                android:textSize="15sp" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="gone"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/md_grey_300" />





                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="gone"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@color/md_grey_300" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|top"
                        android:maxLines="3"
                        android:drawablePadding="5dp"
                        android:layout_margin="3dp"
                        android:tag="100"
                        android:text="Note "
                        android:textColor="@color/md_grey_500"
                        android:textSize="14sp" />

                  <!--  <ovenues.com.ovenue.customviews.UserTextView
                        android:id="@+id/tv_remove"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:gravity="right|top"
                        android:maxLines="3"
                        android:paddingLeft="10dp"
                        android:tag="300"
                        android:text="Remove"
                        android:textColor="@color/md_red_700"
                        android:textSize="14sp" />-->
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>






    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
